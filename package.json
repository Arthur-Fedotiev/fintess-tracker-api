{
  "name": "fintess-tracker-api",
  "version": "1.0.0",
  "description": "FitnessTracker backend API",
  "main": "server.js",
  "scripts": {
    "build": "rimraf dist && tsc && yarn copy-files",
    "copy-files": "cp -R src/public/ dist/public",
    "preserve": "yarn build",
    "serve": "concurrently \"tsc --watch\" \"nodemon -q src/server.ts\"",
    "lint": "eslint src/**/*.ts",
    "format": "eslint src/**/*.ts --fix",
    "format:check": "prettier --check .",
    "prestart": "yarn build",
    "start": "cross-env NODE_ENV=production node dist/server.js",
    "deploy": "pm2 deploy ecosystem.config.js production",
    "predestroy": "yarn build",
    "destroy": "node dist/seeder.js -d",
    "preimport": "yarn build",
    "import": "node dist/seeder.js -i",
    "format:write": "prettier --write .",
    "lint:check": "eslint src/",
    "lint:fix": "eslint --fix .",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint",
      "pre-push": "yarn lint && yarn test"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Arthur-Fedotiev/fintess-tracker-api.git"
  },
  "keywords": [
    "fitness-tracker"
  ],
  "author": "Artur Fedotiev",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Arthur-Fedotiev/fintess-tracker-api/issues"
  },
  "homepage": "https://github.com/Arthur-Fedotiev/fintess-tracker-api#readme",
  "dependencies": {
    "@google-cloud/translate": "^6.3.1",
    "@types/app-root-path": "^1.2.4",
    "@types/cors": "^2.8.12",
    "@types/hpp": "^0.2.2",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.18.0",
    "app-root-path": "^3.0.0",
    "axios": "^0.27.2",
    "bind-decorator": "^1.0.11",
    "body-parser": "^1.20.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "colors": "^1.4.0",
    "concurrently": "^7.1.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^6.4.0",
    "firebase-admin": "^10.3.0",
    "helmet": "^5.1.0",
    "hpp": "^0.2.3",
    "mongoose": "^6.2.10",
    "morgan": "^1.10.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "typescript": "^4.6.3",
    "winston": "^3.7.2",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/colors": "^1.2.1",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.3",
    "@types/mongoose": "^5.11.97",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.23",
    "copyfiles": "^2.4.1",
    "eslint": "^8.12.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.4",
    "husky": "^7.0.4",
    "jest": "^28.1.1",
    "nodemon": "^2.0.15",
    "prettier": "^2.6.2",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.7.0"
  }
}
